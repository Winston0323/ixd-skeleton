                //document.getElementById("button-description").innerHTML = "";
                document.getElementById("button-description").style.visibility = "hidden";
                document.getElementById("progress-description").innerHTML = "<div class='frame'><p>Final product accepted!</p></div>";
            }
        </script> --}}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js"
