<html>

<head>
	<title>Chat</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
	<link href='https://fonts.googleapis.com/css?family=Roboto:300,400,700' rel='stylesheet' type='text/css'>
	<link href="/css/mainpage.css" rel="stylesheet">
	<link href="/css/chat.css" rel="stylesheet">
</head>

<body>
	<nav class="navbar navbar-expand bg-light fixed-top shadow-sm">
		<a class="navbar-brand" href="..">
			<img class="home" id='lg' alt="Brand logo" src="/images/Oval.png">
		</a>
		<ul class="navbar-nav me-auto">
			<li class="nav-item">
				<a class="nav-link home" aria-current="page" href="http://localhost:3000">Home</a>
			</li>
		</ul>
		<ul class="navbar-nav">
			<li class="nav-item dropdown">
				<a class=" nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
					data-bs-toggle="dropdown" aria-expanded="false">
					Profile
				</a>
				<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
					<li><a class="dropdown-item" href="availability">Calendar</a></li>
					<li><a class="dropdown-item" href="http://localhost:3000/order">Order</a></li>
					<li><a class="dropdown-item" href="#">Sign Up</a></li>
					<li>
						<hr class="dropdown-divider">
					</li>
					<li><a class="dropdown-item" href="#">Log Out</a></li>
				</ul>
			</li>
			<li class="nav-item active">
				<a class="nav-link" href="http://localhost:3000/messages">Messages</a>
			</li>
		</ul>
	</nav>
	<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
		<ol class="breadcrumb">
			<li class="breadcrumb-item home"><a href="http://localhost:3000">Home</a></li>
			<li class="breadcrumb-item" aria-current="page"><a href="../{{name}}&{{artist}}">{{artist}}</a></li>
			<li class=" breadcrumb-item active" aria-current="page">Message</li>
		</ol>
	</nav>
	<div class="chat-panel">
		<section class="container">
			{{#each text}}
			<div class="row no-gutter">
				<div class="col-sm-3">
					<div class="message--right">
						<div class="chat-bubble chat-bubble--right">
							{{this.right}}
						</div>
						<div class="user-icon--right">
							<i class="fas fa-user-alt" id="user"></i>
						</div>
					</div>
				</div>
			</div>
			<div class="row no-gutter">
				<div class="col-sm-3">
					<div class="message--left">
						<div class="user-icon--left">
							<i class="fas fa-user-alt" id="user"></i>
						</div>
						<div class="chat-bubble chat-bubble--left">
							{{this.left}}
						</div>
					</div>
				</div>
			</div>
			{{/each}}
			<div class="row no-gutter">
				<div class="col-sm-3">
					<div class="message--left">
						<div class="user-icon--left">
							<i class="fas fa-user-alt" id="user"></i>
						</div>
						<div class="chat-bubble chat-bubble--left">
							<a href="http://localhost:3000/addOrder/{{artist}}">Final</a>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
	<div class="fixed-bottom">
		<div class="row">
			<div class="col-sm-12">
				<form id="sendTextForm" role="form" method="get" action="/artist/{{name}}&{{artist}}/chat/send">
					<div class="chat-box-tray">
						<input type="text" id='text' name='text' placeholder="Type your messages">
						</input>
						<div class="input-group-append">
							<button type="submit" class="btn btn-primary">
								<i class="fas fa-paper-plane"></i>
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

